<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
    <!-- 1번 레이아웃 적용 화면 -->    
    <definition name=".login" template="/WEB-INF/views/layouts/baseLayout.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="menu" value="" />        
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>
 
    <!-- 2번 레이아웃 적용 화면-->
    <definition name=".root" template="/WEB-INF/views/layouts/baseLayout.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="menu" value="" />        
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>
    
    <!-- (1) -->    
    <definition name="/main/*" extends=".login">
      <put-attribute name="body" value="/WEB-INF/views/main/{1}.jsp" />
    </definition>
 
    <!-- all -->
   <definition name="/*/*" extends=".root">      
      <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>